{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "description": "Describes Non-Fungible post-condition",
  "additionalProperties": false,
  "required": [
    "assetInfoId",
    "asset",
    "assetValue",
    "principal",
    "conditionCode",
    "amount"
  ],
  "properties": {
    "assetInfoId": {
      "type": "integer",
      "const": 2,
      "description": "2 represents an Fungible post-condition"
    },
    "asset": {
      "type": "object",
      "properties": {
        "contractAddress": {
          "type": "string",
          "description": "A Stacks 2.0 address"
        },
        "contractName": {
          "type": "string"
        },
        "assetName": {
          "type": "string"
        }
      }
    },
    "assetValue": {
      "type": "object",
      "description": "Described as a `ClarityValue`."
    },
    "principal": {
      "type": "object",
      "description": "TODO: make schema"
    },
    "conditionCode": {
      "type": "string",
      "enum": ["0x01", "0x02", "0x03", "0x04", "0x05"],
      "description": "Fungible condition codes"
    },
    "amount": {
      "type": "string"
    }
  }
}
