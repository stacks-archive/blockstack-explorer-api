{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "description": "Describes a list of transactions on the Stacks 2.0 blockchain",
  "properties": {
    "results": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "type": "number",
            "enum": [0, 1, 2, 3, 4]
          },
          "txid": {
            "type": "string"
          },
          "sender": {
            "type": "string"
          },
          "recipient": {
            "type": "string"
          },
          "fees": {
            "type": "object",
            "properties": {
              "amount": {
                "type": "string"
              },
              "currency": {
                "type": "string"
              }
            }
          },
          "block": {
            "type": "number"
          },
          "sponsored": {
            "type": "boolean"
          },
          "state": {
            "type": "string",
            "enum": ["success", "pending", ""]
          },
          "timestamp": {
            "type": "number"
          }
        }
      }
    }
  }
}
